<div class="modal moodle-has-zindex" data-region="modal-container" aria-hidden="true" role="dialog">
    <div class="modal-dialog {{$classes}}{{/classes}}" role="document" data-region="modal" aria-labelledby="{{uniqid}}-modal-title" tabindex="0">
        <div class="modal-content">
            <div class="modal-header {{$headerclasses}}{{headerclasses}}{{/headerclasses}}" data-region="header">
                <h5 id="{{uniqid}}-modal-title" class="modal-title" data-region="title">{{#str}}reporttechnicalproblem, local_modreportproblem{{/str}}</h5>

                <button type="button" class="close" data-action="hide" aria-label={{#quote}}{{#str}}closebuttontitle{{/str}}{{/quote}}>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-region="body">
                <div class="container">
                    <p>{{#str}}reporttitle, local_modreportproblem{{/str}}</p>
                    <form autocomplete="off" accept-charset="utf-8" class="mform">
                        <input type="hidden" id="cmid" name="cmid" />
                        <input type="hidden" id="courseid" name="courseid" />
                        <input type="hidden" id="module" name="module" />

                        <div class="form-group">
                            <label for="problemtype">{{#str}}reporttype, local_modreportproblem{{/str}}</label>
                            <select id="problemtype" name="problemtype" class="form-control" required>
                                <option value="">{{#str}}reportselectoption, local_modreportproblem{{/str}}</option>
                                <option value="reportvideoproblem">{{#str}}reportvideoproblem, local_modreportproblem{{/str}}</option>
                                <option value="reportaudioproblem">{{#str}}reportaudioproblem, local_modreportproblem{{/str}}</option>
                                <option value="reportoutdatedmaterial">{{#str}}reportoutdatedmaterial, local_modreportproblem{{/str}}</option>
                                <option value="reportconfusematerial">{{#str}}reportconfusematerial, local_modreportproblem{{/str}}</option>
                                <option value="reportcommentsdetailslevel">{{#str}}reportcommentsdetailslevel, local_modreportproblem{{/str}}</option>
                                <option value="reportcontenterror">{{#str}}reportcontenterror, local_modreportproblem{{/str}}</option>
                                <option value="reportothers">{{#str}}reportothers, local_modreportproblem{{/str}}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="problemdetails">{{#str}}reportprobledetails, local_modreportproblem{{/str}}</label>
                            <textarea rows="4" class="form-control" id="problemdetails" name="problemdetails" required></textarea>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer" data-region="footer">
                <button type="button" class="btn btn-primary" data-action="save">{{#str}}reportsend, local_modreportproblem{{/str}}</button>
                <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
            </div>
        </div>
    </div>
</div>